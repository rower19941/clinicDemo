<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://ownerBrowse.caption"
        focusComponent="ownersTable"
        messagesPack="com.company.clinic.web.screens.owner">
    <data readOnly="true">
        <collection id="ownersDc"
                    class="com.company.clinic.entity.Owner">
            <view extends="_local">
                <property name="address" view="_minimal">
                    <property name="city"/>
                    <property name="street"/>
                    <property name="number"/>
                </property>
            </view>
            <loader id="ownersDl">
                <query>
                    <![CDATA[select e from clinic_Owner e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ownersTable"
            spacing="true">
        <filter id="filter"
                applyTo="ownersTable"
                dataLoader="ownersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ownersTable"
                    width="100%"
                    dataContainer="ownersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="greeting" caption="msg://greet"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="address.city"/>
                <column id="address.street"/>
                <column id="address.number"/>
                <column id="email"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ownersTable.create"/>
                <button id="editBtn" action="ownersTable.edit"/>
                <button id="removeBtn" action="ownersTable.remove"/>
                <button id="greetBtn" action="ownersTable.greeting"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

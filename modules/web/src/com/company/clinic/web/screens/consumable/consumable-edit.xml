<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://consumableEdit.caption"
        focusComponent="form"
        messagesPack="com.company.clinic.web.screens.consumable">
    <data>
        <instance id="consumableDc"
                  class="com.company.clinic.entity.Consumable">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="consumableDc">
            <column width="350px">
                <textArea id="titleField" property="title" rows="5"/>
                <textField id="priceField" property="price"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
